@model Bookstore.Areas.Identity.UserModel

<div class="container">
    <h3>Edit User</h3>
    <hr />

    <form method="post" asp-action="Edit">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="form-group">
            <label>Select Roles:</label>
            @*<select class="form-control">
                    <option value="value">text</option>
                </select>*@
            @*@Html.DropDownListFor(x => Model.RoleId, new SelectList(Model.Roles, "Value", "Text", "Selected"),
                htmlAttributes: new { @class = "form-control", id = "Role" })*@
            <select asp-for="RoleId" class="form-control" asp-items="Model.Roles" id="Role"></select>
        </div>

        <input type="hidden" asp-for="RoleName" />

        <button type="submit" class="btn btn-block btn-primary">
            <i class="fas fa-edit"></i> &nbsp; Edit
        </button>
    </form>

</div>

@section Scripts {
    <script>
        $("#Role").change(function () {

            var optionSelected = $("option:selected", this);
            var valueSelected = this.value;
            //go vadime tekstot od opcijata
            var textSelected = optionSelected.text();
            $("#RoleName").val(textSelected);

            console.log($("#RoleName").val(textSelected));
            console.log(valueSelected);
            console.log(textSelected);

        });
    </script>
}

