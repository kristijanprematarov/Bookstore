
@model Bookstore.Models.BookViewModel


<div class="container">
    <h1 class="text-center">CREATE BOOK</h1>

    <hr>

    <form asp-action="Create">

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="BookTitle"></label>
                <input asp-for="BookTitle" class="form-control">
            </div>
            <div class="form-group col-md-6">
                @*<label asp-for="AuthorName"></label>*@
                <label asp-for="AuthorID"></label>
                <select asp-for="AuthorID" class="form-control" asp-items="ViewBag.AuthorList"></select>
                <a class="btn btn-success btn-sm btn-add-new-custom text-white mt-2" data-toggle="modal" data-target="#authorModal">Add New Author</a>
                <input asp-for="AuthorName" hidden class="form-control mt-2">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="YearOfIssue"></label>
                <input asp-for="YearOfIssue" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="NumberOfPages"></label>
                <input asp-for="NumberOfPages" class="form-control">
            </div>
        </div>

        <div class="form-row">
            @*<div class="form-group col-6">
                </div>*@
            <div class="form-group col-12">
                @*<label asp-for="PublisherName">PublisherName</label>*@
                <label asp-for="PublisherID"></label>
                <select asp-for="PublisherID" class="form-control" asp-items="ViewBag.PublisherList"></select>
                <a class="btn btn-success btn-sm btn-add-new-custom text-white mt-2" data-toggle="modal" data-target="#publisherModal">Add New Publisher</a>
                <input asp-for="PublisherName" hidden class="form-control mt-2">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="UserId"></label>
                <input asp-for="UserId" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Genre"></label>
                <input asp-for="Genre" class="form-control">
            </div>
        </div>

        <div class="form-row">
            @*<div class="form-group col-6">
                </div>*@
            <div class="form-group col-md-12">
                @*<label asp-for="CategoryName"></label>*@
                <label asp-for="CategoryID"></label>
                <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryList"></select>
                <a class="btn btn-success btn-sm btn-add-new-custom text-white mt-2" data-toggle="modal" data-target="#categoryModal">Add New Category</a>
                <input asp-for="CategoryName" hidden class="form-control mt-2">

                @*@Html.DropDownListFor(x => x.CategoryID, new SelectList(ViewBag.CategoryList,"Value","Text"),
                    htmlAttributes: new { @class="form-control", id="CategoryID" })*@

            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="BookType"></label>
                <input asp-for="BookType" class="form-control">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="BookCoverType"></label>
                <input asp-for="BookCoverType" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Language"></label>
                <input asp-for="Language" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Country"></label>
                <input asp-for="Country" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Edition"></label>
                <input asp-for="Edition" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Dimensions"></label>
                <input asp-for="Dimensions" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Weight"></label>
                <input asp-for="Weight" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Copies"></label>
                <input asp-for="Copies" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Shipping"></label>
                <input asp-for="Shipping" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="SoldItems"></label>
                <input asp-for="SoldItems" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="PhotoURL"></label>
                <input asp-for="PhotoURL" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-12">
                <label asp-for="Rating"></label>
                <input asp-for="Rating" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="btn-group col-12 mt-4">
                <input class="btn-success btn" type="submit" name="Create" value="Create" />
            </div>
        </div>
    </form>
    <div class="mt-3">
        <a asp-action="Index">Back to list</a>
    </div>


    <!-- *****************************   MODALS AUTHOR  *****************************-->
    <!-- Modal Author-->

    <div class="modal fade" id="authorModal" tabindex="-1" role="dialog" aria-labelledby="authorModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="authorModalLabel">Add New Author</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input class="form-control" asp-for="AuthorNameDTO" type="text" placeholder="Enter name..." />
                    </div>
                    <div class="form-group">
                        <label>Country</label>
                        <input class="form-control" asp-for="AuthorCountryDTO" type="text" placeholder="Enter country..." />
                    </div>
                    <div class="form-group">
                        <label>Date of Birth</label>
                        <input class="form-control" asp-for="AuthorDateBirthDTO" type="text" placeholder="Enter date of birth..." />
                    </div>
                    <div class="form-group">
                        <label>Short description</label>
                        <input class="form-control" asp-for="AuthorShortDescriptionDTO" type="text" placeholder="Enter short description..." />
                    </div>
                    <div class="form-group">
                        <label>Language</label>
                        <input class="form-control" asp-for="AuthorLanguageDTO" type="text" placeholder="Enter language..." />
                    </div>
                    <div class="form-group">
                        <label>Gender</label>
                        <input class="form-control" asp-for="AuthorGenderDTO" type="text" placeholder="Enter gender..." />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-outline-success" id="addNewAuthor">Add New Author</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal AUTHOR ADDED-->
    <div class="modal fade" id="authorAddedModal" tabindex="-1" role="dialog" aria-labelledby="authorAddedModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-success" id="authorAddedModalLabel">You have successfully added an Author!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal AUTHOR NOT ADDED-->
    <div class="modal fade" id="authorNotAddedModal" tabindex="-1" role="dialog" aria-labelledby="authorNotAddedModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="authorNotAddedModalLabel">Author has not been added ! Please enter data in all fields !</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- *****************************   MODALS PUBLISHER  *****************************-->
    <!-- Modal Publisher-->

    <div class="modal fade" id="publisherModal" tabindex="-1" role="dialog" aria-labelledby="publisherModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="publisherModalLabel">Add New Publisher</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input class="form-control" asp-for="PublisherNameDTO" type="text" placeholder="Enter name..." />
                    </div>
                    <div class="form-group">
                        <label>Country</label>
                        <input class="form-control" asp-for="PublisherCountryDTO" type="text" placeholder="Enter country..." />
                    </div>
                    <div class="form-group">
                        <label>Year</label>
                        <input class="form-control" asp-for="PublisherYearDTO" type="text" placeholder="Enter year..." />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-outline-success" id="addNewPublisher">Add New Publisher</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal PUBLISHER ADDED-->
    <div class="modal fade" id="publisherAddedModal" tabindex="-1" role="dialog" aria-labelledby="publisherAddedModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-success" id="publisherAddedModalLabel">You have successfully added a Publisher!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal PUBLISHER NOT ADDED-->
    <div class="modal fade" id="publisherNotAddedModal" tabindex="-1" role="dialog" aria-labelledby="publisherNotAddedModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="publisherNotAddedModalLabel">Publisher has not been added ! Please enter data in all fields !</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- *****************************   MODALS CATEGORY  *****************************-->
    <!-- Modal Category-->

    <div class="modal fade" id="categoryModal" tabindex="-1" role="dialog" aria-labelledby="categoryModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="authorModalLabel">Add New Category</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <label>Category</label>
                    <input class="form-control" type="text" asp-for="CategoryNameDTO" placeholder="Enter category..." />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-outline-success" id="addNewCategory">Add New Category</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal CATEGORY ADDED-->
    <div class="modal fade" id="categoryAddedModal" tabindex="-1" role="dialog" aria-labelledby="categoryAddedModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-success" id="categoryAddedModalLabel">You have successfully added a Category!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal CATEGORY NOT ADDED-->
    <div class="modal fade" id="categoryNotAddedModal" tabindex="-1" role="dialog" aria-labelledby="categoryNotAddedModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="categoryNotAddedModalLabel">Category has not been added ! Please enter data in all fields !</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


</div>


@section Scripts {
    <script src="~/js/bookCreate/book.js"></script>
}

