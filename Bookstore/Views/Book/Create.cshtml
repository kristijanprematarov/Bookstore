
@model Bookstore.Entities.Book


<div class="container">
    <h1 class="text-center">CREATE BOOK</h1>

    <hr>

    <form asp-action="Create">

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control">
            </div>
            <div class="form-group col-md-6">
                @*<label asp-for="AuthorName"></label>*@
                <label asp-for="AuthorID"></label>
                <select asp-for="AuthorID" class="form-control" asp-items="ViewBag.AuthorList"></select>

                <input asp-for="AuthorName" hidden class="form-control mt-2">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="YearOfIssue"></label>
                <input asp-for="YearOfIssue" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="NumberOfPages"></label>
                <input asp-for="NumberOfPages" class="form-control">
            </div>
        </div>

        <div class="form-row">
            @*<div class="form-group col-6">
                </div>*@
            <div class="form-group col-12">
                @*<label asp-for="PublisherName">PublisherName</label>*@
                <label asp-for="PublisherID"></label>
                <select asp-for="PublisherID" class="form-control" asp-items="ViewBag.PublisherList"></select>
                <input asp-for="PublisherName" hidden class="form-control mt-2">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="UserId"></label>
                <input asp-for="UserId" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Genre"></label>
                <input asp-for="Genre" class="form-control">
            </div>
        </div>

        <div class="form-row">
            @*<div class="form-group col-6">
                </div>*@
            <div class="form-group col-md-12">
                @*<label asp-for="CategoryName"></label>*@
                <label asp-for="CategoryID"></label>
                <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryList"></select>

                <input asp-for="CategoryName" hidden class="form-control mt-2">

                @*@Html.DropDownListFor(x => x.CategoryID, new SelectList(ViewBag.CategoryList,"Value","Text"),
                    htmlAttributes: new { @class="form-control", id="CategoryID" })*@

            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="BookType"></label>
                <input asp-for="BookType" class="form-control">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="BookCoverType"></label>
                <input asp-for="BookCoverType" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Language"></label>
                <input asp-for="Language" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Country"></label>
                <input asp-for="Country" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Edition"></label>
                <input asp-for="Edition" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Dimensions"></label>
                <input asp-for="Dimensions" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Weight"></label>
                <input asp-for="Weight" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Copies"></label>
                <input asp-for="Copies" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Shipping"></label>
                <input asp-for="Shipping" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="SoldItems"></label>
                <input asp-for="SoldItems" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="PhotoURL"></label>
                <input asp-for="PhotoURL" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Rating"></label>
                <input asp-for="Rating" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="DateAdded"></label>
                <input asp-for="DateAdded" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="btn-group col-12 mt-4">
                <input class="btn-success btn" type="submit" name="Create" value="Create" />
            </div>
        </div>
    </form>
    <div class="mt-3">
        <a asp-action="Index">Back to list</a>
    </div>
</div>


@section Scripts {
    <script src="~/js/bookCreate/book.js"></script>
}

