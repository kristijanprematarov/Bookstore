@model IEnumerable<Bookstore.Entities.Author>

<div class="container">

    <h1>Author</h1>

    <hr />

    <div class="row mb-4">
        <div class="col-12 col-md-12">
            <h3>All authors</h3>
            <a class="btn-success btn float-right" asp-controller="Author" asp-action="Create">
                <i class="fas fa-plus-circle"></i>
                &nbsp; &nbsp;
                Create
            </a>
        </div>
    </div>

    <table class="table table-bordered table-hover table-responsive-lg">

        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Country</th>
                <th>DateBirth</th>
                <th>ShortDescription</th>
                <th>Language</th>
                <th>Gender</th>
                <th>Popularity</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var author in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => author.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => author.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => author.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => author.DateBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => author.ShortDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => author.Language)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => author.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => author.Popularity)
                    </td>
                    <td>
                        <a class="btn-secondary btn btn-block" asp-controller="Author" asp-action="Edit" asp-route-id="@author.Id">
                            <i class="fas fa-edit"></i>
                            &nbsp; &nbsp;
                            Edit
                        </a>
                        <a class="btn-info btn btn-block" asp-controller="Author" asp-action="Details" asp-route-id="@author.Id">
                            <i class="fas fa-info"></i>
                            &nbsp; &nbsp;
                            Details
                        </a>
                        <a class="btn-danger btn btn-block" asp-controller="Author" asp-action="Delete" asp-route-id="@author.Id">
                            <i class="fas fa-trash"></i>
                            &nbsp; &nbsp;
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>

